#!/bin/sh

set -e

if [ ! -L /usr/local/lib/python3/dist-packages/TestHarness ]; then
    mkdir -p /usr/local/lib/python3/dist-packages
    ln -s ../../../share/leap_testing/tests/TestHarness /usr/local/lib/python3/dist-packages/TestHarness
fi

# leap_testing is part of the package so should already exist by the time postinst runs
if [ ! -L /usr/local/share/leap_testing/bin ]; then
    ln -s ../../bin /usr/local/share/leap_testing/bin
fi
