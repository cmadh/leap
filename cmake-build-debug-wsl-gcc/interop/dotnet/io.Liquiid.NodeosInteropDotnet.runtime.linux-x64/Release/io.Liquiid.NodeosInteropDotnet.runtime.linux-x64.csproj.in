<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFrameworks>netcoreapp3.1;net7.0</TargetFrameworks>
    <RuntimeIdentifier>linux-x64</RuntimeIdentifier>
    <AssemblyName>io-liquiid-nodeos_interop-native</AssemblyName>
    <Version>1.0</Version>

    <!-- Nuget Properties -->
    <Description>.NET native wrapper for the NodeosInterop project</Description>
    <IncludeBuildOutput>false</IncludeBuildOutput>

    <!-- Pack Option -->
    <Title> linux-x64 v1.0</Title>
    <PackageId>io.Liquiid.NodeosInteropDotnet.runtime.linux-x64</PackageId>

    <!-- Signing -->
    <SignAssembly>false</SignAssembly>
    <PublicSign>false</PublicSign>
    <DelaySign>false</DelaySign>
  </PropertyGroup>

  <ItemGroup>
    <!-- Native library must be in native directory... -->
    <!-- If project is built as a STATIC_LIBRARY (e.g. Windows) then we don't have to include it -->
    <Content Include="
      /mnt/e/source/repos/leap-experiments/cmadhLeap2/cmake-build-debug-wsl-gcc/lib/io-liquiid-nodeos_interop-native.so
      ;/mnt/e/source/repos/leap-experiments/cmadhLeap2/cmake-build-debug-wsl-gcc/lib/libnodeosInterop.so
    ">
      <PackagePath>runtimes/linux-x64/native/%(Filename)%(Extension)</PackagePath>
      <Pack>true</Pack>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="
      /mnt/e/source/repos/leap-experiments/cmadhLeap2/cmake-build-debug-wsl-gcc/bin/nodeosInteropExecutable
    ">
      <PackagePath>runtimes/linux-x64/native/%(Filename)%(Extension)</PackagePath>
      <Pack>true</Pack>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
      <None Include="/mnt/e/source/repos/leap-experiments/cmadhLeap2/cmake-build-debug-wsl-gcc/interop/dotnet/io.Liquiid.NodeosInteropDotnet.runtime.linux-x64/io.Liquiid.NodeosInteropExecutable.targets" Pack="true" PackagePath="build" />
  </ItemGroup>

</Project>
